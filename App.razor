<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(MainLayout)">
            <p role="alert">Sorry, there's nothing at this address.</p>
        </LayoutView>
    </NotFound>
</Router>

@code {
    @inject IJSRuntime JSRuntime
    @inject NavigationManager NavigationManager
    // adds the 404 redirect. Github is fun.

    protected override void OnInitialized() {
        
        string? targetPage = (string?)JSRuntime.InvokeAsync<string?>("localStorage.getItem", "targetPage").Result;

        if ( string.IsNullOrEmpty(targetPage) ) { return; }
        NavigationManager.NavigateTo( targetPage ,false);
    }

}
