@inherits LayoutComponentBase


<Dropdown Color=@(globalUserData?.CurrentTheme == "light" ? DropdownColor.Light : DropdownColor.Dark) >
    <DropdownToggleButton>
        <Icon Name=@(globalUserData?.CurrentTheme == "light" ? IconName.SunFill : IconName.MoonFill ) />
        @(globalUserData?.CurrentTheme.Substring(0, 1).ToUpper() + globalUserData?.CurrentTheme.Substring(1)) mode
    </DropdownToggleButton>

    <DropdownMenu>
        @if (globalUserData != null ) {
            <DropdownItem @onclick="globalUserData.SetThemeLight" > <Icon Name="IconName.SunFill" /> Light Mode</DropdownItem>
            <DropdownItem @onclick="globalUserData.SetThemeDark" > <Icon Name="IconName.MoonFill" /> Dark Mode</DropdownItem>
        }
    </DropdownMenu>
    
</Dropdown>

@code {
    [CascadingParameter]
    GlobalUserData globalUserData { get; set; } = default!;

}