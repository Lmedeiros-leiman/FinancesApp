@inherits LayoutComponentBase


<Dropdown Color=@(globalUserData?.UserStyle.CurrentTheme == ValidThemes.light ? DropdownColor.Light : DropdownColor.Dark) >
    <DropdownToggleButton>
        <Icon Name=@(globalUserData?.UserStyle.CurrentTheme == ValidThemes.light ? IconName.SunFill : IconName.MoonFill ) />
        @(globalUserData?.UserStyle.CurrentTheme.ToString().Substring(0, 1).ToUpper() + globalUserData?.UserStyle.CurrentTheme.ToString().Substring(1)) mode
    </DropdownToggleButton>

    <DropdownMenu>
        @if (globalUserData != null ) {
            <DropdownItem @onclick="() => {globalUserData.UserStyle.SetTheme(ValidThemes.light);}" > <Icon Name="IconName.SunFill" /> Light Mode</DropdownItem>
            <DropdownItem @onclick="() => {globalUserData.UserStyle.SetTheme(ValidThemes.dark);}" > <Icon Name="IconName.MoonFill" /> Dark Mode</DropdownItem>
        }
    </DropdownMenu>
    
</Dropdown>

@code {
    [CascadingParameter]
    GlobalUserData globalUserData { get; set; } = default!;

}